{
  "name": "R3F Devtool",
  "description": "Inspect in 3d",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>" ],
      "js": "contentscript.js"
  }
  ],
  "commands": {
    "openWindow" : {
      "description" : "open a window"
    }
  },
  "icons": {
    "128": "/assets/R3F.png"
  },
  "devtools_page": "devtools.html",
  "action": {
    "default_popup": "index.html"
  }
}